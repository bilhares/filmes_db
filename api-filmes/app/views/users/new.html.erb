<h1>Sing up</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: user, local: true) do |form| %>
        <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control' %>
        </div>
        <% end %>
    </div>
</div>